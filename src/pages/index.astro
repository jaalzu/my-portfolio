---
import Projects from '../components/sections/Projects.astro';
import AboutMe from '../components/sections/AboutMe.astro';
import Picture from '../components/sections/Picture.astro';
import Contact from '../components/sections/Contact.astro';
import TechStack from '../components/sections/TechStack.astro';
import '../styles/global.css'
import CustomCursor from '../components/ui/CustomCursor.tsx';

---
<html lang="es">
  <head>
    <meta charset="utf-8" />
   <link rel="stylesheet" href="/src/styles/global.css">

    <meta name="viewport" content="width=device-width" />
    <title>Mi Portfolio</title>
  </head>
  <body>
    <div class="parent">    <CustomCursor client:load />

 
      <div class="projects"><Projects /></div>
      <div class="about-me"><AboutMe /></div>
      <div class="picture"><Picture /></div>
      <div class="contact"><Contact /></div>
      <div class="tech-stack"><TechStack /></div>
    </div>
  </body>
</html>


<style>
  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    min-height: 100vh;
    background: url('/windows_xp_46.jpg') bottom/cover no-repeat fixed;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    color: #F2FFF4;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .parent {
    display: grid;
    grid-template-columns: 2.2fr 0.9fr 0.7fr 1fr; 
    grid-template-rows: repeat(4, 1fr);
    grid-column-gap: 20px;
    grid-row-gap: 20px;
    width: 100%;
    max-width: 1700px;
    height: 90vh;
  }

  .projects { grid-area: 1 / 3 / 5 / 5; }
  .about-me { grid-area: 1 / 1 / 3 / 2; }
  .picture { grid-area: 1 / 2 / 3 / 3; }
  .contact { grid-area: 3 / 2 / 5 / 3; }
  .tech-stack { grid-area: 3 / 1 / 5 / 2; }

  .projects, .about-me, .picture, .contact, .tech-stack {
    display: flex;
  }

  .projects :global(.glass-card),
  .about-me :global(.glass-card),
  .picture :global(.glass-card),
  .contact :global(.glass-card),
  .tech-stack :global(.glass-card) {
    width: 100%;
    height: 100%;
  }
</style>