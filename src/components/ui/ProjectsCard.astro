---
import '../../styles/glassRetro.css';
import Badge from './Badge.astro';
import ButtonPill from './ButtonPill.astro';

interface Props {
  title?: string;
  description?: string;
  projectUrl?: string; 
  codeUrl?: string;
  tech?: string[];
  projectInfo?: {
    origin: string;
    architecture: string;
    stack: string;
    image?: string;
  };
}

const {
  title = "Proyecto sin título",
  description = "Descripción no disponible.",
  projectUrl = "#",
  codeUrl = "#",
  tech = [],
  projectInfo = {
    origin: "Información no disponible",
    architecture: "Información no disponible",
    stack: "Información no disponible"
  }
} = Astro.props as Props;

const uniqueId = `modal-${title.toLowerCase().replace(/\s+/g, '-')}`;
---

<div class="glass-base project-card">
  <div class="info">
    <h3>{title}</h3>
    <p>{description}</p>

    <div class="tech-list">
      {tech.map(t => (
        <Badge text={t} />
      ))}
    </div>
  </div>

  <div class="actions">
    <ButtonPill 
      projectUrl={projectUrl} 
      codeUrl={codeUrl} 
      modalId={uniqueId}
    />
  </div>
</div>

<!-- Modal -->
<div id={uniqueId} class="modal-overlay">
  <div class="modal-content glass-base">
    <button class="modal-close" aria-label="Cerrar modal">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        width="24" 
        height="24" 
        viewBox="0 0 24 24" 
        fill="none" 
        stroke="currentColor" 
        stroke-width="2" 
        stroke-linecap="round" 
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="modal-header">
      <h2>{title}</h2>
    </div>

    {projectInfo.image && (
      <div class="modal-image">
        <img src={projectInfo.image} alt={`Imagen de ${title}`} />
      </div>
    )}

    <div class="modal-body">
      <section class="modal-section">
        <h3>Cómo surgió el proyecto</h3>
        <p>{projectInfo.origin}</p>
      </section>

      <section class="modal-section">
        <h3>Patrones de Arquitectura</h3>
        <p>{projectInfo.architecture}</p>
      </section>

      <section class="modal-section">
        <h3>Stack Tecnológico</h3>
        <p>{projectInfo.stack}</p>
      </section>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modals = document.querySelectorAll('.modal-overlay');
    
    modals.forEach(modal => {
      const closeBtn = modal.querySelector('.modal-close');
      
      // Cerrar al hacer click en el botón de cerrar
      closeBtn?.addEventListener('click', () => {
        modal.classList.remove('active');
        document.body.style.overflow = '';
      });
      
      // Cerrar al hacer click fuera del modal
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
      
      // Cerrar con tecla ESC
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('active')) {
          modal.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    });
  });
</script>

<style>
.project-card {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  border-radius: 28px;
  padding: .5rem 1rem;
  background: linear-gradient(
    180deg,
    rgba(45, 51, 48, 0.230) 20%,
    rgba(22, 22, 22, 0.230) 60%,
    rgba(0, 0, 0, 0.230) 10%,
    rgba(26, 28, 28, 0.230) 30% 
  );
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.207), 
            inset 0px 4px 4px rgba(121, 255, 253, 0.178),
            inset 0px -1px 1px rgba(0, 0, 0, 0);
  border: 1px solid rgba(255, 255, 255, 0.186);
}

.info {
  display: flex;
  flex-direction: column;
}

.info h3 {
  font-size: 1.3rem;
  color: var(--color-primary);
  margin-top: .7rem;
  margin-bottom: .2rem;
}

.info p {
  font-size: .940rem;
  margin-top: .3rem;
  line-height: 1.5;
}

.tech-list {
  display: flex;
  gap: .3rem;
  flex-wrap: wrap;
  margin-top: 0.4rem;
}

.actions {
  display: flex;
  align-items: center;
  justify-content: center;
}



/* Modal Styles */
.modal-overlay {
  position: fixed;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  padding: 2rem;
}

.modal-overlay.active {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 100%;
  max-width: 700px;
  max-height: 75vh;
  overflow-y: auto;
  border-radius: 20px;
  padding: 1rem;
  position: relative;
  background: linear-gradient(
 
    180deg,
    rgba(45, 51, 48, 0.663) 20%,
    rgba(22, 22, 22, 0.85) 60%,
    rgba(0, 0, 0, 0.85) 10%,
    rgba(26, 28, 28, 0.85) 30% 
  );

  transform: scale(0.3);
  transition: transform 0.3s ease;
}

.modal-overlay.active .modal-content {
  transform: scale(1);
}

.modal-close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: rgba(255, 255, 255, 0.057);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  color: var(--color-primary, #6CFF9D);
  z-index: 10;
}

.modal-close svg {
  width: 20px;
  height: 20px;
}

.modal-close:hover {
  background: rgba(255, 255, 255, 0.2);
}

.modal-header {
  margin-bottom: 1rem;
}

.modal-header h2 {
  font-size: 1.3rem;
  color: var(--color-primary, #6CFF9D);
  margin-block: .5rem;
}

.modal-image {
  width: 100%;
  height: 150px;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: .9rem;
  border: 1px solid rgba(255, 255, 255, 0.166);
}

.modal-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.modal-body {
  display: flex;
  flex-direction: column;
  gap: .2rem;
}

.modal-section h3 {
  font-size: 1.1rem;
  color: var(--color-primary, #6CFF9D);
  margin-bottom: 0.5rem;
}

.modal-section p {
  font-size: 0.9rem;
  line-height: 1.4;
  color: rgba(255, 255, 255, 0.9);

}

/* Scrollbar personalizada */
.modal-content::-webkit-scrollbar {
  width: 4px;
  height: 100%;
}

.modal-content::-webkit-scrollbar-track {
  border-radius: 10px;
  margin-top: 1rem;
}

.modal-content::-webkit-scrollbar-thumb {
  /* background: rgba(108, 255, 157, 0.3); */
  background: rgba(108, 255, 157, 0.3);
  border-radius: 10px;
}

.modal-content::-webkit-scrollbar-thumb:hover {
  background: rgba(108, 255, 157, 0.5);
}

@media (max-width: 768px) {
  .modal-overlay {
    padding: 0.75rem;
  }

  .modal-content {
    padding: 1.25rem;
    max-height: 90vh;
  }

  .modal-header h2 {
    font-size: 1.3rem;
  }

  .modal-section h3 {
    font-size: 1rem;
  }

  .modal-section p {
    font-size: 0.85rem;
  }

  .modal-image {
    height: 150px;
  }
}
</style>