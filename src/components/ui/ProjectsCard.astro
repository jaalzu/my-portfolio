---
import '../../styles/glassRetro.css';
import ButtonLink from '../ui/ButtonLink.astro';

const {
  title = "Proyecto sin título",
  description = "Descripción no disponible.",
  image = "",
  projectUrl = "#",
  codeUrl = "#",
  borderRadius = 28
} = Astro.props;

---
<div
  class="glass-base project-card"
  style={`border-radius: ${borderRadius}px;`}
>
  <div class="img-container">
    <img src={image} alt={title} loading="lazy" />
    <div class="actions">
      <ButtonLink href={projectUrl} variant="primary">Ver Proyecto</ButtonLink>
      <ButtonLink href={codeUrl} variant="secondary">Ver Código</ButtonLink>
    </div>
  </div>

  <div class="info">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
.project-card {
    width: 100%;
  height: 100%;
}

 .img-container {
  width: 100%;
  height: 100px;      
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  overflow: hidden;
  position: relative;
}

.img-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
  .actions {
    position: absolute;
    bottom: -30px;
    left: 12px;
    display: flex;
    gap: 0.6rem;
    height: 100%;
    width: 100%;
  }

  .info {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
</style>