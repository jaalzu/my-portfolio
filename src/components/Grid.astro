---
// GlassGrid.astro - Solo el grid, sin estilos visuales
interface Props {
  maxWidth?: string;
  height?: string;
  gap?: string;
}

const { 
  maxWidth = '1600px', 
  height = '800px',
  gap = '12px'
} = Astro.props;
---

<div class="glass-grid" style={`--max-width: ${maxWidth}; --grid-height: ${height}; --grid-gap: ${gap};`}>
  <div class="grid-item-1">
    <slot name="card-1" />
  </div>
  <div class="grid-item-2">
    <slot name="card-2" />
  </div>
  <div class="grid-item-3">
    <slot name="card-3" />
  </div>
  <div class="grid-item-4">
    <slot name="card-4" />
  </div>
  <div class="grid-item-5">
    <slot name="card-5" />
  </div>
</div>

<style>
  .glass-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(4, 1fr);
    gap: var(--grid-gap);
    max-width: var(--max-width);
    width: 100%;
    height: var(--grid-height);
  }
    
  .grid-item-1 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .grid-item-2 {
    grid-column: span 2;
    grid-row: span 2;
    grid-column-start: 1;
    grid-row-start: 3;
  }

  .grid-item-3 {
    grid-row: span 2;
    grid-column-start: 3;
    grid-row-start: 1;
  }

  .grid-item-4 {
    grid-row: span 2;
    grid-column-start: 3;
    grid-row-start: 3;
  }

  .grid-item-5 {
    grid-column: span 2;
    grid-row: span 4;
    grid-column-start: 4;
    grid-row-start: 1;
  }
</style>