---
import Card from '../ui/Card.astro';
import DecryptedText from '@/components/ui/DecryptedText.tsx';
import WordRotate from "@/components/ui/WordRotate.tsx";
---

<Card>
    <div class="about-me">
        <h2 class="name">Hi! My name is Javier Alzú.</h2>
        <p class="subtitle">
            <DecryptedText 
                client:load
                originalText="25-year-old coffee addict from Argentina "
                hoverText="Thanks for being here. Don't forget to check my projects!"
                className=""
            />
        </p>
        
     <h1 class="main-title">
    <span class="highlight">Desarrollador Frontend</span> enfocado en crear experiencias digitales 
    pixel perfect - cuidadas y accesibles, elaboradas con código 
    <span class="word-rotate-wrapper">
        <WordRotate
            client:load
            words={["limpio.", "seguro.", "optimizado.", "escalable."]}
            delay={1600}
        />
    </span>
</h1>


        <br />
        <h1 class="commitment">Always committed to collaborating, learn, and improve myself every day, with strong attention to detail.</h1>
    </div>
</Card>

<style>
    .about-me {
        padding: .3rem 2rem;
    }

    .name {
        font-size: 1.623rem; 
        margin-bottom: 0;
        font-weight: 700;
    }

    .subtitle {
        font-size: .930rem; 
        margin-top: .1rem;
        margin-bottom: .7rem;
        color: #b5b5b5df; 
        font-weight: 700;
    }

    .main-title {
        font-size: 1.950rem;
        line-height: 1.150;
        margin-bottom: 0;
        margin-top: 0;
        display: inline-block;
        width: 100%;
    }

    .highlight {
        color: var(--color-primary);
    }

    .word-rotate-wrapper {
        display: inline-block;
        margin: 0 4px;
        min-width: 90px;
        text-align: center;
        vertical-align: top;
    }

    .commitment {
        margin-bottom: 1.5rem;
    }
</style>